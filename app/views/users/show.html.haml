.contents.row 
  %br
  %h5
    #{@name}さんの投稿一覧
  
  - @posts.each do |post|
    .col.s12
      .card
        .card-content.black-text.lime.lighten-4
          .card-title.center 学習Memo
          .date 日付
          = post.created_at.strftime("%Y/%m/%d %H:%M")
          %br
          %br
          .user-name ユーザー名
          = post.user.name 
          %br 
          %br
          .have-done 今日の学習内容
          = simple_format(post.have_done)
          %br
          .to-do 明日以降の予定
          = simple_format(post.to_do)
          %br
          .comment コメント
          = simple_format(post.comment)
          %br
          .card-action
            = link_to 'コメントページ',post_path(post)
            = link_to '編集', edit_post_path(post)
            = link_to '削除', post, method: :delete, data: { confirm: "学習memoを削除します。よろしいですか？"}

%footer.pagination
  = paginate(@posts)

